<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentFlowers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.alex.edu.fragmaents.GaleryFragment">


    <ImageView
        android:id="@+id/ivGalery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher_flower1"
        app:srcCompat="@mipmap/ic_launcher_flower1" />

    <ImageButton
        android:id="@+id/ibtnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        app:srcCompat="@mipmap/ic_launcher_left_arrow" />

    <ImageButton
        android:id="@+id/ibtnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        app:srcCompat="@mipmap/ic_launcher_right_arrow" />

</FrameLayout>
